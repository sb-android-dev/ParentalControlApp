    <com.google.android.material.card.MaterialCardView
        style="@style/DashboardBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_hideable="false"
        app:behavior_peekHeight="350dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardElevation="5dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <include layout="@layout/bottom_sheet_dashboard" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clArrive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:translationZ="@dimen/_5dp">

        <RelativeLayout
            android:id="@+id/rlArrived"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/pure_bg_color"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rlNotArrived"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:id="@+id/progressArrived"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="?attr/colorPrimary" />

            <TextView
                android:id="@+id/btnArrived"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_centerInParent="true"
                android:background="?attr/pure_bg_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/arrived"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="?attr/pure_txt_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlNotArrived"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rlOk"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toEndOf="@id/rlArrived"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:id="@+id/progressNotArrived"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="?attr/colorOnPrimary" />

            <TextView
                android:id="@+id/btnNotArrived"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/colorPrimary"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/not_arrived_yet"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="?attr/colorOnPrimary" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/pure_bg_color"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/rlNotArrived"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/pure_bg_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/okay"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="?attr/pure_txt_color" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

