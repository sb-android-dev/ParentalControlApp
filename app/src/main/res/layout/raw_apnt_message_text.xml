<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/topDateView"
            layout="@layout/top_date_view"/>

    <RelativeLayout
        android:paddingEnd="56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/aponnet_message_cell_bg"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="@dimen/message_radius"
                app:cardElevation="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_rowApnt_message"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="8dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                    android:text="Hi... Good evening"
                    android:textSize="14sp"
                    android:textColor="@color/dark_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_rowApnt_time"
                android:layout_marginTop="4dp"
                android:layout_gravity="start"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"                android:text="yesterday"
                android:layout_marginStart="18dp"
                android:textSize="12sp"
                android:textColor="@color/light_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>

    </LinearLayout>
</layout>
