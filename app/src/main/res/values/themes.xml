<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SchoolManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorSecondaryVariant">@color/primary_dark_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>

<!--        <item name="fontFamily">@font/montserrat</item>-->
        <item name="titleTextColor">@color/white</item>

        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <!-- Customize your theme here. -->
        <!--        <item name="colorSurface">@color/white</item>-->
    </style>

    <style name="Theme.SchoolManager.NoActionBar" parent="Theme.SchoolManager">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SchoolManager.Splash" parent="Theme.SchoolManager.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!--        <item name="android:windowBackground">@drawable/splash_background</item>-->
    </style>

    <style name="Theme.SchoolManager.LogIn" parent="Theme.SchoolManager.NoActionBar">
<!--        <item name="android:windowBackground">@drawable/ic_log_in_bg</item>-->
<!--        <item name="android:navigationBarColor">#</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">#EE4F37B3</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="RegularButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RegularErrorButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/design_default_color_error</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">48dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="rippleColor">@color/primary_color</item>
    </style>

    <style name="Theme.SchoolManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SchoolManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="queryBackground">@color/white</item>
    </style>

    <style name="ProgressPrimary" parent="Theme.SchoolManager">
        <item name="colorAccent">@color/purple_500</item> <!-- Whatever color you want-->
    </style>

    <style name="ProgressWhite" parent="Theme.SchoolManager">
        <item name="colorAccent">@color/white</item> <!-- Whatever color you want-->
    </style>


    <style name="ImagePickerTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
    </style>

</resources>